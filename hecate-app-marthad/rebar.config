%%% Root rebar.config for hecate-app-marthad (Martha daemon)
{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
    %% Event sourcing stack
    {reckon_db, "1.3.2"},
    {evoq, "1.3.1"},
    {reckon_evoq, "1.1.4"},

    %% HTTP server
    {cowboy, "2.12.0"},

    %% SQLite (read models)
    {esqlite, "0.8.8"},

    %% HTTP client (for LLM proxy via hecate-daemon)
    {hackney, "1.20.1"}
]}.

{relx, [
    {release, {hecate_app_marthad, "0.1.0"}, [
        %% Core daemon
        hecate_app_marthad,

        %% Event sourcing stack
        reckon_db,
        evoq,
        reckon_evoq,

        %% Venture lifecycle (CMD + QRY)
        guide_venture_lifecycle,
        query_venture_lifecycle,

        %% Division ALC (CMD + QRY)
        guide_division_alc,
        query_division_alc,

        %% External deps
        sasl
    ]},

    {mode, dev},
    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true},
    {sys_config, "config/sys.config"},
    {vm_args, "config/vm.args"}
]}.

{profiles, [
    {prod, [
        {relx, [
            {mode, prod},
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]},
    {test, [
        {deps, [
            {meck, "0.9.2"}
        ]}
    ]}
]}.

{project_plugins, [
    rebar3_ex_doc
]}.

{ex_doc, [
    {source_url, <<"https://github.com/hecate-social/hecate-app-martha">>},
    {extras, [<<"README.md">>]},
    {main, <<"README.md">>}
]}.

{hex, [{doc, ex_doc}]}.

{dialyzer, [
    {warnings, [
        error_handling
    ]},
    {plt_extra_apps, [
        cowboy, cowlib, ranch, hackney, esqlite,
        reckon_evoq, evoq
    ]},
    %% rebar3 strips debug_info from dep beams, so dialyzer cannot
    %% analyze reckon_db and reckon_gater (no abstract code).
    %% Exclude them along with their transitive deps (khepri/ra stack).
    {exclude_apps, [
        reckon_db,
        reckon_gater,
        khepri,
        ra,
        horus,
        aten,
        seshat,
        gen_batch_server
    ]}
]}.
